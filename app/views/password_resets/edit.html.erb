<% provide(:botton_text, '更新') %>
<% provide(:title, 'パスワード再設定') %>
<div class="page-title">
    <h2><%= yield(:title) %></h2>
</div>
<div class="form">
    <%= form_with(url: password_reset_path, method: :put, local: true) do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <p><%= f.label :password %></p>
        <p><%= f.password_field :password, class: "form-control" %></p>
        <p><%= f.label :password_confirmation %></p>
        <p><%= f.password_field :password_confirmation, class: "form-control" %></p>
        <p><%= f.submit yield(:botton_text), class: "btn btn-block btn-primary" %></p>
    <% end %>
</div>